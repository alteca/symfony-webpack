{% extends 'base.html.twig' %}

{% block title %}
    Login - {{ parent() }}
{% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans([error.message]) }}
        </div>
    {% endif %}
    <div class="col-xs-4 col-xs-offset-4 login-container">
        <div class="well">
            <form  action="{{ url('login_check') }}" method="post">
                <div class="form-group">
                    <label for="username" class="control-label">Username</label>
                    <input type="text" class="form-control" id="username" name="_username" value="" required="" title="Please enter you username" placeholder="user@example.com">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="password" class="control-label">Password</label>
                    <input type="password" class="form-control" id="password" name="_password" value="" required="" title="Please enter your password">
                    <span class="help-block"></span>
                </div>
                <button type="submit" class="btn btn-success btn-block">Login</button>
            </form>
        </div>
    </div>
{% endblock %}
