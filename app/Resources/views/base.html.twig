<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Symfony webpack{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('dist/app.css') }}">
    </head>
        <body>
            <div class="content">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-success" role="alert">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                {% block content %}{% endblock %}
            </div>
        </body>

        <script type="application/javascript" src="{{ asset('dist/vendor_bundle.js') }}"></script>
        <script type="application/javascript" src="{{ asset('dist/app_bundle.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
